<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Fragment1">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="-20dp"
                android:layout_marginRight="-20dp"
                android:src="@drawable/computer_img1"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/computer_engineering1"
            android:textSize="10sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="> 교육목적 및 인재상"
            android:textSize="20sp"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="- 4차 산업혁명의 핵심분야인 컴퓨터 하드웨어, 소프트웨어 및 인공지능 분야에 특화된 인재를 양성"
            android:textSize="10sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="- IT 전문지식을 바탕으로 컴퓨터 하드웨어, 소프트웨어, 인공지능 분야의 핵심기술과 융합응용 능력을 갖춘 인재"
            android:textSize="10sp"
            android:layout_marginTop="5dp"/>



        </LinearLayout>

    </ScrollView>

</FrameLayout>